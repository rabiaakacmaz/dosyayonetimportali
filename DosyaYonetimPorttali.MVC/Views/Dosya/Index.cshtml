@model List<DosyaDto>

<h2>Yüklediğiniz Dosyalar</h2>

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}

@if (Model.Count == 0)
{
    <p>Henüz dosya yüklememişsiniz.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Dosya Adı</th>
                <th>Yüklenme Tarihi</th>
                <th>İndir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dosya in Model)
            {
                <tr>
                    <td>@dosya.DosyaAdi</td>
                    <td>@dosya.YuklenmeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a href="@dosya.DosyaYolu" class="btn btn-success" target="_blank">İndir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}